<%= form_for(@posting) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :ptype %>
  <%= f.text_field :ptype %>
  <%= f.button :submit %>
<% end %> 